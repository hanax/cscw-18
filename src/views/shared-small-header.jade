.shared-small-header
	.section.small-header
		a(href='../index.html')
			span
				img(src='../assets/logo-home-header.svg')
		span= homeHeader.h2 + ' : ' + homeHeader.highlight

	ul.nav.stick-to-top.collapsed-nav
		.nav-mobile
			span.fa.fa-list-ul
		.content-wrapper
			each n in sharedNavi.content
				a(href=n.link)
					li= n.title

	ul.nav.full-nav
		each n in sharedNavi.content
			a(href=n.link)
				li(id=n.title)= n.title
